pkgname=julia-git-gpucompiler-src
pkgver=1.6.2
_commit=7039134ca589030b60ec659172986360772526b1
pkgrel=1
pkgdesc="GPUCompiler.jl"
url="https://github.com/JuliaGPU/GPUCompiler.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
source=("git+https://github.com/JuliaGPU/GPUCompiler.jl.git#commit=$_commit"
        0001-Fix-compilation.patch)
sha256sums=('de464ac6c003f63a64b3576d76fd265382f16b1139bc856c9976933516936e37'
            'ebfd63323ed118d1b3cb97d0bf64f6eda6ba7c69f4d82bf90a001e6ef63edb6b')

prepare() {
  cd GPUCompiler.jl

  patch -Np1 --no-backup-if-mismatch < "../0001-Fix-compilation.patch"
}

package() {
  cd GPUCompiler.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh GPUCompiler "${pkgdir}" "${pkgname}" julia-git
}
